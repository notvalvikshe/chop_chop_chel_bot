{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "ES2021",
        "strictPropertyInitialization": false,
        "strict": true,
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./src",
        "skipLibCheck": true,
        "incremental": true,
        "resolveJsonModule": true,
        "paths": {
            "@contracts/*": ["contracts/*"]
        },
        "esModuleInterop": true
    },
    "exclude": ["node_modules", "dist"]
}
